[alias]
    g=log --clor --graph --abrev-commit --all --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
    gs=log --color --graph --abrev-commit --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
    s=status -s
    st=status
    # Save a repo as a tarball
    export = archive -o latest.tar.gz -9 --prefix=latest/
[color]
    ui = true
[core]
    editor = vim
    pager = less -+S
[push]
    default = simple
[core]
    editor = vim
